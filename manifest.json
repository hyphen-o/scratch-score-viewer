{
    "manifest_version": 3,
    "name": "Scratch's Score Viewer",
    "description": "Displays the score of the searched Scratch works. Scratch上で作品検索した時に各作品のCTスコアが可視化される拡張機能",
    "version": "1.0",
    "action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "img/icon16.png",
        "32": "img/icon32.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "content_scripts": [
        {
            "js": [
                "src/loader.js"
            ],
            "matches": [
                "https://scratch.mit.edu/search/*"
            ]
        },
        {
            "js": [
                "src/mypage.js"
            ],
            "matches": [
                "https://scratch.mit.edu/mystuff/"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/viewer.js",
                "src/drscratch.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "host_permissions": [
        "https://ajax.googleapis.com/"
    ]
}